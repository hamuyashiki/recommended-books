extends layout

block content
  h3.my-3 書籍の情報を編集する
  form(method="post", action="/recommendations")
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      h5 カテゴリ名: #{categoryName}
      input(type="hidden" name="categoryId" value=categoryId)
      input(type="hidden" name="recommendId" value=recommendId)     
    div.form-group
      h5 書籍名
      input(type="text" name="bookName" value=`${bookName}` required )#bookName.form-control
    div.form-group
      h5 書籍の紹介
      textarea(name="introduction" required )#introduction.form-control #{introduction}
    button(type="submit").btn.btn-danger 反映